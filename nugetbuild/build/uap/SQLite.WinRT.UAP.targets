<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <SQLitePlatform Condition="'$(Platform)' == 'Win32'">x86</SQLitePlatform>
    <SQLitePlatform Condition="'$(Platform)' != 'Win32'">$(Platform)</SQLitePlatform>
  </PropertyGroup>
  <ItemGroup Condition="'$(TargetPlatformIdentifier)' == 'UAP'">
    <Reference Include="SQLite.WinRT.Ext">
      <HintPath>$(MSBuildThisFileDirectory)..\..\runtimes\win10-$(SQLitePlatform)\SQLite.WinRT.Ext.dll</HintPath>
    </Reference>
    <Reference Include="$(MSBuildThisFileDirectory)..\..\runtimes\win10-$(SQLitePlatform)\native\SQLite.Core.winmd">
      <Implementation>SQLite.Core.dll</Implementation>
    </Reference>
    <ReferenceCopyLocalPaths Include="$(MSBuildThisFileDirectory)..\..\runtimes\win10-$(SQLitePlatform)\native\SQLite.Core.dll" />
  </ItemGroup>
</Project>